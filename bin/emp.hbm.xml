<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.dao.Employee" table="emp_tab" discriminator-value="e">
		<id name="id" column="ID" type="integer">
			<generator class="assigned"></generator>
		</id>
		<discriminator column="emptype"></discriminator>
		<property name="name">
			<column name="NAME"></column>
			<type name="string"></type>
		</property>
		<property name="sal" column="SAL" type="integer"></property>
		
		<component name="addr" class="com.dao.Address">
			<property name="city" column="CITY" type="string"></property>
			<property name="state" column="STATE" type="string"></property>
		</component>
	</class>
</hibernate-mapping>